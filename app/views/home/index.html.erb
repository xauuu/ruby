	<div class="popular_places_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section_title text-center mb_70">
                        <h3>Tour du lịch HOT</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                
                <% @tour.each do |item| %>
                    <div class="col-lg-4 col-md-6">
                        <div class="single_place">
                            <div class="thumb">
                                <%= image_tag (item.img.url) if item.img? %>
                                <p class="prise"><%= number_to_currency(item.price, unit: "", precision: 0) %> VND</p>
                            </div>
                            <div class="place_info">
                                <%= link_to tour_detail_path(:tour_id => item.id) do %>
                                    <h3><%= item.name %></h3>
                                <% end %>
                                <p><%= item.category.name %></p>
                                <div class="rating_days d-flex justify-content-between">
                                    <span class="d-flex justify-content-center align-items-center">
                                      <% for a in 1..item.rating %>
                                        <i class="fa fa-star"></i>
                                      <% end %>
                                      <% for a in 1..(5-item.rating) %>
                                        <i class="fa fa-star-o"></i>
                                      <% end %>
                                        <a href="#">(20 Review)</a>
                                    </span>
                                    <div class="days">
                                        <i class="far fa-clock"></i>
                                        <a href="#"><%= item.day %> Ngày</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="more_place_btn text-center">
                        <a class="boxed-btn4" href="<%= tour_path%>">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="recent_trip_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section_title text-center mb_70">
                        <h3>Tin tức du lịch</h3>
                    </div>
                </div>
            </div>
            <div class="row">
            
            <% @blog.each do |item| %>
                <div class="col-lg-4 col-md-6">
                    <div class="single_trip">
                        <div class="thumb">
                            <%= image_tag item.img.url %>
                        </div>
                        <div class="info">
                            <div class="date">
                                <span><%= item.updated_at.strftime("%d tháng %m, %Y")%></span>
                            </div>
                            <a href="<%= blog_detail_path(:blog_id => item.id)%>">
                                <h3><%= item.title%></h3>
                            </a>
                        </div>
                    </div>
                </div>
            <% end %>
                
            </div>
        </div>
    </div>
