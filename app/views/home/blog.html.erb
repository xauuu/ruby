<div class="bradcam_area bradcam_bg_4">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text text-center">
                        <h3>Tin tức du lịch</h3>
                        <p>Pixel perfect design with awesome contents</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container-fluid mt-5">
	<div class="row" id="tintuc">
		<div class="col-md-8">
        
        <% if !@blog.blank? %>
            <% @blog.each do |item| %>
            
                <div class="row mb-4">
                    <div class="col-md-4">
                        <%= link_to  blog_detail_path(:blog_id => item.id)  do %>
                            <%= image_tag(item.img.url, :class => 'img-tt') if item.img? %>
                        <% end %>
                    </div>
                    <div class="col-md-8">
                        <div class="tt-title">
                            <%= link_to blog_detail_path(:blog_id => item.id) do %>
                                <%= item.title%>
                            <% end %>
                        </div>
                        <div><i class="fas fa-calendar-alt"></i>Ngày đăng: <%= item.updated_at.strftime("%d tháng %m, %Y")%></div>
                        <hr>
                        <div class="tt-body">
                            <%= raw(item.desc)%>
                        </div>
                    </div>
                </div>
            <% end %>
        <% else %>
            <div class="col-lg-12">
                <div class="text-center">
                    <h4>Không tìm thấy bài viết</h4>
                </div>
            </div>
        <% end %>
        
		</div>
        <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget search_widget">
                        <%= form_for :search, url: blog_search_path do |f| %>
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <%= f.text_field :key, class: 'form-control', required: 'required', placeholder: "Tìm kiếm tin tức"%>
                                    <div class="input-group-append">
                                        <button class="btn" type="button"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <%= f.submit "Tìm kiếm", class: "button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" %>
                        <%end%>
                        </aside>

                        <aside class="single_sidebar_widget post_category_widget">
                            <h4 class="widget_title">Danh mục tin tức</h4>
                            <ul class="list cat-list">
                            
                            <% @blog_category.each do |item| %>
                                <li>
                                    <%= link_to blog_path, :class => 'd-flex' do %>
                                        <p><%= item.name%></p>
                                        <p>(<%= item.blog.count%>)</p>     
                                    <% end %> 
                                </li>
                            <% end %>
                            
                            </ul>
                        </aside>

                        <aside class="single_sidebar_widget popular_post_widget">
                            <h3 class="widget_title">Bài viết xem nhiều</h3>
                            
                            <% @blog_view.each do |item| %>
                                <div class="media post_item">
                                <%= image_tag item.img.url%>
                                <div class="media-body">
                                    <a href="single-blog.html">
                                        <h3><%= item.title%></h3>
                                    </a>
                                    <p><%= item.updated_at.strftime("%d tháng %m, %Y")%></p>
                                </div>
                            </div>
                            <% end %>
                            
                        </aside>
                    </div>
                </div>
	</div>
</div>