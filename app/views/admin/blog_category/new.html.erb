<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm danh mục tin tức</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <%= form_for :blog_category, url: add_blog_category_path do |f| %>
            <div class="card-body">
                <div class="form-group">
                    <label>Tên danh mục</label>
                    <%= f.text_field :name, class: 'form-control', required: 'required', placeholder: "Nhập tên danh mục"%>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <%= f.text_area :desc, :id => "note" %>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <%= f.submit "Thêm danh mục", class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
<script>
    ClassicEditor
    .create(document.querySelector('#note'))
    .then(editor => {
        console.log(editor);
    })
    .catch(error => {
        console.error(error);
    });
</script>
