<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Cập nhật tour du lịch</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <%= form_for :tour, url: update_tour_path(:tour_id => @tour.id) do |f| %>
            <div class="card-body">
                <div class="form-group">
                    <label>Tên tour</label>
                    <%= f.text_field :name, class: 'form-control', required: 'required', placeholder: ""%>
                </div>
                <div class="form-group">
                    <label>Danh mục</label>
                    <%=f.collection_select( :category_id, @category, :id, :name, {:prompt=>true}, {:class=>'form-control', :required=>true}) %>
                </div>
                <div class="form-group">
                    <label>Ảnh</label>
                    <%= f.file_field :img, accept: "image/*", class: 'form-control' %>
                </div>
                <div class="form-group">
                    <label>Giá</label>
                    <%= f.text_field :price, class: 'form-control', required: 'required', placeholder: ""%>
                </div>
                <div class="form-group">
                    <label>Đánh giá</label>
                    <%= f.text_field :rating, class: 'form-control', required: 'required', placeholder: ""%>
                </div>
                <div class="form-group">
                    <label>Số ngày</label>
                    <%= f.text_field :day, class: 'form-control', required: 'required', placeholder: ""%>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <%= f.text_area :desc, :id => "note" %>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <%= f.submit "Cập nhật", class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
<script>
    ClassicEditor
    .create(document.querySelector('#note'))
    .then(editor => {
        console.log(editor);
    })
    .catch(error => {
        console.error(error);
    });
</script>
